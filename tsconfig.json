{
    "include": [
        "**/*.ts",
        "**/*.tsx",
    ],
    "compilerOptions": {
        "strict": true,
        "baseUrl": ".",
        "jsx": "react-jsx",
        "moduleResolution": "bundler",
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ES2022",
        ],
        "allowJs": true,
        "noEmit": true,
        "module": "ESNext",
        "target": "ES2022",
        "skipLibCheck": true,
        "noUnusedLocals": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "noErrorTruncation": true,
        "resolveJsonModule": true,
        "verbatimModuleSyntax": true,
        "forceConsistentCasingInFileNames": true,
        "paths": {
            "~/*": [
                "./app/*"
            ]
        },
        "types": [
            "node",
            "vinxi/types/server",
            "vinxi/types/client"
        ]
    },
    "exclude": [
        "node_modules"
    ]
}